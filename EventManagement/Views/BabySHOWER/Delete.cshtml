@model EventManagement.Models.babyshowertable

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-5 delete" style="font-style:italic">
    <div class="card">
        <div class="card-body">
            <h2>Are you sure you want to delete this item?</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" style="color:red;font-weight:bold;font-style:italic" id="createtoast" />
                </div>
            }
        </div>
    </div>
</div>


<style>
    .delete {
        padding-bottom: 70vh;
    }
</style>


    <script type="text/javascript">
        $(function () {
            $("#createtoast").click(function () {
                toastr.success("Successfully deleted", "Delete", { Timeout: 4000 });
            });
        })
    </script>

