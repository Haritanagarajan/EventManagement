@model EventManagement.Models.EventName

@{
    ViewBag.Title = "EventsCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EventsCreate</h2>

@using (Html.BeginForm("EventsCreate", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>EventName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">
            @Html.LabelFor(model => model.eventname1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.eventname1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.eventname1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.eventimage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="eventimage" name="eventimage" class="form-control" />
                @Html.ValidationMessageFor(model => model.eventimage, "", new { @class = "text-danger" })

                @if (Model != null && Model.eventimage != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.eventimage)" alt="Event Image" />
                }
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.eventd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.eventd)
                    @Html.ValidationMessageFor(model => model.eventd, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" id="createtoast" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>




@section Script{

    <script type="text/javascript">
      $(function () {
          $("#createtoast").click(function () {
              toastr.success("Successfully Created", "Create", { Timeout: 4000 });
          });
      })
    </script>

}