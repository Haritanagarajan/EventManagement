@model IEnumerable<EventManagement.Models.caketable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CakeCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cakesavailable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.caked)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cakeimage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cakesavailable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.caked)
        </td>
        <td>
            @if (item.cakeimage != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(item.cakeimage)" alt="Employee Image" width="70" />
            }
        </td>
      
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.cakeid }) |
            @Html.ActionLink("Details", "Details", new { id = item.cakeid }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.cakeid })
        </td>
    </tr>
}

</table>
