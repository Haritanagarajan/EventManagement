<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style type="text/css">
        .image {
            width: 50%;
            height: 100%;
            box-shadow: 24px 15px 78px 2px black
        }
    </style>
</head>
<body>
    <br/>
    <br/>
    <div class="container  body-content image d-flex align-items-centerd-flex justify-content-center pt-5 mt-5 align-items-between  offset-2">
     
            @RenderBody()
      
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

