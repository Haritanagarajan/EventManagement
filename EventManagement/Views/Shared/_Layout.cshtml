<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>



            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @Html.ActionLink("Events", "EventsCreate", "Events", null, new { @class = "nav-link text-center" })
                        @Html.ActionLink("Date", "DateCreate", "Date", null, new { @class = "nav-link text-center" })
                        @Html.ActionLink("Time", "TimeCreate", "Time", null, new { @class = "nav-link text-center" })
                        @Html.ActionLink("Theme", "ThemeCreate", "Theme", null, new { @class = "nav-link text-center" })
                        @Html.ActionLink("Location", "LocationCreate", "Location", null, new { @class = "nav-link text-center" })

                    </ul>
                </div>
            }
            @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
            {
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @Html.ActionLink("User", "EventsName", "Events", null, new { @class = "nav-link text-center" })
                    </ul>
                </div>
            }

            @Html.ActionLink("Logout", "Logout", "Authendication", null, new { @class = "nav-link text-center text-white" })
</div>

</nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
