@model EventManagement.Models.BachelorParty

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 pt-5  ps-5 pe-5" style="background-color: #4d004d;color:white">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 style="font-style:italic">Edit an Bachelor Celebration</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.bachelorid)
            @Html.HiddenFor(model => model.bacheloruserid)
            @Html.HiddenFor(model => model.bacheloreventcost)
            @Html.HiddenFor(model => model.bachelorhallcapacity)

            <div class="form-group">
                @Html.LabelFor(model => model.bachelordecorations, "Find Your Decor Style", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("bachelordecorations", ViewBag.Decor as SelectList, "Decor", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.bachelordecorations, "", new { @class = "text-danger" })
                </div>
            </div>
            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal" style="color:white;background-color:black;width:250px;font-style:italic">
                View decorations
            </button>
            <div class="form-group">
                @Html.LabelFor(model => model.bachelortheme, "Decide on Your  Theme", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("bachelortheme", ViewBag.Theme as SelectList, "Themes", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.bachelortheme, "", new { @class = "text-danger" })
                </div>
            </div>
            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal1" style="color:white;background-color:black;width:250px;font-style:italic">
                View Themes
            </button>
            <div class="form-group">
                @Html.LabelFor(model => model.bachelorchairs, "Select the chairs", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.bachelorchairs, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.bachelorchairs, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.bachelortables, "Select the tables", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.bachelortables, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.bachelortables, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.bachelordatetime, "Pick your date and time", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.bachelordatetime, new { htmlAttributes = new { @class = "form-control datepicker" } })*@
                    <input type="datetime-local" class="" name="bachelordatetime" />
                    @Html.ValidationMessageFor(model => model.bachelordatetime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.bachelorcakes, "Pick Your Dessert Delight", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("bachelorcakes", ViewBag.Cake as SelectList, "Cakes ", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.bachelorcakes, "", new { @class = "text-danger" })
                </div>
            </div>
            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal2" style="color:white;background-color:black;width:250px;font-style:italic">
                View Cakes
            </button>
            <div class="form-group">
                @Html.LabelFor(model => model.bachelorlocation, "Select your favv location", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("bachelorlocation", ViewBag.Location as SelectList, "Locations", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.bachelorlocation, "", new { @class = "text-danger" })
                </div>
            </div>

            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal3" style="color:white;background-color:black;width:250px;font-style:italic">
                View Locations
            </button>


            <div class="form-group">
                @Html.LabelFor(model => model.bachelorbeverages, "Do you require food selection?", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.bachelorbeverages)
                        @Html.ValidationMessageFor(model => model.bachelorbeverages, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 pb-5">
                    <input type="submit" value="Curate your Bachelor event" class="btn btn-default" style="color:white;background-color:black;width:250px;font-style:italic" />
                </div>
            </div>
        </div>
    }
</div>


<script>
    var today = new Date().toISOString().slice(0, 16);
    document.getElementsByName("bachelordatetime")[0].min = today;
</script>

