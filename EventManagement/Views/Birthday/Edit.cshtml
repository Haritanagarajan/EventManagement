        $(function () {
            $("#createtoast").click(function () {
                toastr.success("Successfully Edited", "Edit", { Timeout: 4000 });
            });
        })
    </script>
}
<style>
    .control-label {
        font-style: italic;
        margin-top: 10px;
    }

    .form-group {
        margin-top: 30px;
        color: white;
    }

    .buttons {
        margin-top: 10px;
        border-radius: 20px;
    }
</style>


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="font-style:italic">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Available Decorations</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    @foreach (var item in ViewBag.DecorationOptions)
                    {
                        <div class="col-lg-12 col-sm-12">
                            <div class="hover10 column">

                                @if (item.decorimage != null)
                                {
                                    <img src="data:image;base64,@Convert.ToBase64String(item.decorimage)" alt="Decoration Image" class="img-fluid" id="main-img" width="330%" />
                                }
                            </div>
                        </div>
                        <div class="card-title">
                            <p style="font-style:italic">@item.decoravailable</p>
                        </div>

                    }
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary buttons" data-bs-dismiss="modal">Close</button>
        </div>
    </div>
</div>




