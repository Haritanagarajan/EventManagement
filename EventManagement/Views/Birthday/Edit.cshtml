@model EventManagement.Models.birthdaytable

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 pt-5  ps-5 pe-5" style="background-color: #4d004d;color:white">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>birthdaytable</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.bdayid)
            @Html.HiddenFor(model => model.bdayuserid)
            @Html.HiddenFor(model => model.bdayeventcost)
            @Html.HiddenFor(model => model.bdayhallcapacity)


            <div class="form-group">
                @Html.LabelFor(model => model.bdaydecorations, "Find Your Decor Style", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("bdaydecorations", ViewBag.Decor as SelectList, "Decor", new { @class = "form-control", data_val_required = "Pick Your Decorations." })
                    @Html.ValidationMessageFor(model => model.bdaydecorations, "", new { @class = "text-danger" })
                </div>
            </div>

            <button type="button" class="btn buttons" data-bs-toggle="modal" data-bs-target="#exampleModal" style="color:white;background-color:black;width:50px;font-style:italic">
                <i class="fa-solid fa-eye"></i>
            </button>


            <div class="form-group">
                @Html.LabelFor(model => model.bdaytheme, "Decide on Your  Theme", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("bdaytheme", ViewBag.Theme as SelectList, "Themes", new { @class = "form-control", data_val_required = "Pick Your Themes." })
                    @Html.ValidationMessageFor(model => model.bdaytheme, "", new { @class = "text-danger" })
                </div>
            </div>

            <button type="button" class="btn buttons" data-bs-toggle="modal" data-bs-target="#exampleModal1" style="color:white;background-color:black;width:50px;font-style:italic">
                <i class="fa-solid fa-eye"></i>
            </button>


            <div class="form-group">
                @Html.LabelFor(model => model.bdaychairs, "Select the chairs", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.bdaychairs, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.bdaychairs, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.bdaytables, "Select the tables", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.bdaytables, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.bdaytables, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.bdaydatetime, "Pick your date and time", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.bdaydatetime, new { htmlAttributes = new { @class = "form-control datepicker" } })*@
                    <input type="datetime-local" class="" name="bdaydatetime" required />

                    @Html.ValidationMessageFor(model => model.bdaydatetime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.bdaycakes, "Pick Your Dessert Delight", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("bdaycakes", ViewBag.Cake as SelectList, "Cakes ", new { @class = "form-control", data_val_required = "Pick Your Dessert." })
                    @Html.ValidationMessageFor(model => model.bdaycakes, "", new { @class = "text-danger" })
                </div>
            </div>

            <button type="button" class="btn buttons" data-bs-toggle="modal" data-bs-target="#exampleModal2" style="color:white;background-color:black;width:50px;font-style:italic">
                <i class="fa-solid fa-eye"></i>
            </button>


            <div class="form-group">
                @Html.LabelFor(model => model.bdaylocation, "Select your favv location", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("bdaylocation", ViewBag.Location as SelectList, "Locations", new { @class = "form-control", data_val_required = "Pick Your Locations." })
                    @Html.ValidationMessageFor(model => model.bdaylocation, "", new { @class = "text-danger" })
                </div>
            </div>

            <button type="button" class="btn buttons" data-bs-toggle="modal" data-bs-target="#exampleModal3" style="color:white;background-color:black;width:50px;font-style:italic">
                <i class="fa-solid fa-eye"></i>
            </button>

            <div class="form-group">
                @Html.LabelFor(model => model.bdaybeverages, "Do you require food selection?", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.bdaybeverages)
                        @Html.ValidationMessageFor(model => model.bdaybeverages, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 pb-5">
                    <input type="submit" value="Curate your anniversary event" class="btn btn-default" style="color:white;background-color:black;width:250px;font-style:italic" id="createtoast" />
                </div>
            </div>
        </div>
    }
</div>





@section Scripts{
    <script>
        var today = new Date().toISOString().slice(0, 16);
        document.getElementsByName("bdaydatetime")[0].min = today;
    </script>



    v
