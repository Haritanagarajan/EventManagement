                    @Html.DropDownList("annilocation", ViewBag.Location as SelectList, "Locations", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.annilocation, "", new { @class = "text-danger" })
                </div>
            </div>

            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal3">
                View Locations
            </button>


            <div class="form-group">
                @Html.LabelFor(model => model.annibeverages, "Do you require food selection?", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.annibeverages)
                        @Html.ValidationMessageFor(model => model.annibeverages, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.anniPhotography, "Do you require Photography selection?", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.anniPhotography)
                        @Html.ValidationMessageFor(model => model.anniPhotography, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.anniStyling, "Do you require styling selection?", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.anniStyling)
                        @Html.ValidationMessageFor(model => model.anniStyling, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.anniHospitality, "Do you require hospitality selection?", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.anniHospitality)
                        @Html.ValidationMessageFor(model => model.anniHospitality, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 text-white pb-5">
                    <input type="submit" value="Curate your anniversary event" class="btn btn-default" style="color:white;background-color:black;width:250px;font-style:italic" />
                </div>
            </div>
        </div>
    }

    @*<div>
            @Html.ActionLink("Back to List", "Index")
        </div>*@
</div>


<script>
    var today = new Date().toISOString().slice(0, 16);
    document.getElementsByName("annidatetime")[0].min = today;
</script>

<script>
    $(document).ready(function () {
        var dropdown = $(".myselection");
        var selectedValueDiv = $("#selectedValueDiv");
        selectedValueDiv.text("Selected Decoration: Decor");
        dropdown.change(function () {
            var selectedOption = dropdown.find("option:selected");
            var selectedText = selectedOption.text();
            selectedValueDiv.text("Selected Decoration: " + selectedText);
        });
    });
</script>


<style>
    .control-label {
        font-style: italic;
        margin-top: 10px;
    }

    .form-group {
        margin-top: 30px;
        color: white;
    }
</style>




<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="font-style:italic">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Available Decorations</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    @foreach (var item in ViewBag.DecorationOptions)
                    {
                        <div class="col-lg-4">
                            <div class="hover10 column">

                                @if (item.decorimage != null)
                                {
                                    <img src="data:image;base64,@Convert.ToBase64String(item.decorimage)" alt="Decoration Image" id="main-img" width="330%" />
                                }
                            </div>
                        </div>
                        <div class="card-title">
                            <p style="font-style:italic">@item.decoravailable</p>
                        </div>

                    }
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
        </div>
    </div>
</div>




