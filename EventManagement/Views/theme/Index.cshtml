@model IEnumerable<EventManagement.Models.themetable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "ThemeCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.themename)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.themed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.themeimage)
        </th>
      <th>
          Options
      </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.themename)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.themed)
        </td>
        <td>
            @if (item.themeimage != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(item.themeimage)" alt="Employee Image" width="70" />
            }
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.themeid }) |
            @Html.ActionLink("Details", "Details", new { id = item.themeid }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.themeid })
        </td>
    </tr>
}

</table>
